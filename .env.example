# DSP Platform Environment Configuration Template
# Copy this file to .env and modify values as needed

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dsp_platform
DB_USER=dsp_user
DB_PASSWORD=SecurePassword123!

# ===========================================
# Application Settings
# ===========================================
# JWT Secret for authentication (change in production!)
JWT_SECRET=YourSuperSecretJWTKey

# HTTP API Port (Master Server Web Console)
HTTP_PORT=8080

# TCP Port for Agent connections
TCP_PORT=447

# ===========================================
# Master Server Configuration
# ===========================================
# Public URL for master server (used by agents)
MASTER_URL=https://master.example.com:447

# ===========================================
# Agent Configuration (for tenant agents)
# ===========================================
# Unique identifier for this agent
AGENT_ID=agent-001

# Authentication token for agent
AGENT_TOKEN=your_agent_token_here

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/dsp-platform.log

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info          # debug, info, warn, error
LOG_FILE=./logs/dsp-platform.log
LOG_MAX_SIZE=100        # MB
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30          # days
LOG_COMPRESS=true

# ===========================================
# Security (Production)
# ===========================================
# Enable TLS for agent connections
TLS_ENABLED=false
TLS_CERT_FILE=/etc/ssl/certs/dsp-platform.crt
TLS_KEY_FILE=/etc/ssl/private/dsp-platform.key

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://dashboard.example.com
